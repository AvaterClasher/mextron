<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		{{{open_graph_tags}}}

		<meta
			name="google-site-verification"
			content="000VUoD6Cga6Y1fuCKyFZEmsPTn0klX_7aKgKZC1Tos"
		/>

		<link rel="icon" type="image/x-icon" href="/favicon.ico" />

		<style>
			{{{styles}}}
		</style>

		<title>{{title}}</title>
	</head>

	<body>
		<main class="container">
			<nav>
				<ul>
					{{#each links}}
						<li><a href="{{this.url}}">{{this.label}}</a></li>
					{{/each}}
				</ul>
			</nav>

			<hgroup>
				{{#if page_metadata.title}}
					<h1>{{page_metadata.title}}</h1>
					<h2>{{page_metadata.description}}</h2>
				{{else}}
					<h1>{{title}}</h1>
					<h2>{{description}}</h2>
				{{/if}}
			</hgroup>

			{{{content}}}
		</main>
		<script type="text/javascript">{{{scripts}}}</script>
		<script type="text/javascript">hljs.highlightAll();</script>
	</body>

	<footer class="container">
		<small>
			Built with
			<a
				href="https://avaterclasher.github.io/mextron"
				target="_blank"
				rel="noopener noreferrer"
			>Mextron</a>
			• Made By
			<a
				href="https://github.com/AvaterClasher"
				target="_blank"
				rel="noopener noreferrer"
			>
				Soumyadip Moni
			</a>
			•
			<a
				target="_blank"
				rel="noopener noreferrer"
				href="https://github.com/AvaterClasher/mextron"
			>
				Source code
			</a>
		</small>
	</footer>
</html>